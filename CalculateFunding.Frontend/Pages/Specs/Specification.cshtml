@page
@model CalculateFunding.Frontend.Pages.Specs.SpecificationModel
@{
    ViewData["Title"] = "Create specification";
}
<!-- Breadcrumbs -->
<div class="row">
    <div class="col-xs-12">
        <div class="breadcrumbs">
            <ol>
                <li><a href="/">Home</a></li>
                <li><a href="/specs">Specifications</a></li>
            </ol>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-12">
        <h1 class="heading-xlarge">Create specification</h1>
        <p class="text-muted">Lorem ipsum</p>
    </div>
</div>
<div class="row">
    <div class="col-md-12">
        <form method="post" class="form">

            <div class="form-group">
                <label asp-for="Specification.Name">Name</label>
                <input asp-for="Specification.Id" type="hidden">
                <input asp-for="Specification.Name" class="form-control" type="text">
            </div>
            <div class="form-group">
                <label asp-for="Specification.AcademicYear.Id">Academic year</label>
                <select asp-for="Specification.AcademicYear.Id" class="form-control" name="">
                    @foreach (var year in Model.AcademicYears)
                    {
                        <option selected="@Model.Specification.AcademicYear?.Id" value="@year.Id">@year.Name</option>
                    }
                </select>
            </div>
            <div class="form-group">
                <label asp-for="Specification.FundingStream.Id">Funding stream</label>
                <select asp-for="Specification.FundingStream.Id" class="form-control" name="">
                    @foreach (var stream in Model.FundingStreams)
                    {
                        <option selected="@Model.Specification.FundingStream?.Id" value="@stream.Id">@stream.Name</option>
                    }
                </select>
            </div>
            <div class="form-group">
                <label asp-for="Specification.Description">Description</label>
                <textarea asp-for="Specification.Description" class="summernote" id="contents" title="Contents"></textarea>
            </div>

            <p><button type="submit" class="button">Save</button></p>

        </form>

    </div>
</div>
@section Scripts
{
    <script type="text/javascript">
        $(function() {
            $('.summernote').summernote({
                height: 200
            });

            $('form').on('submit', function (e) {
                e.preventDefault();
                alert($('.summernote').summernote('code'));
                alert($('.summernote').val());
            });
        });
    </script>
}
