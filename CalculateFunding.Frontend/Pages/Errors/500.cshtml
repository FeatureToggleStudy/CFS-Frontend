@page
@model CalculateFunding.Frontend.Pages.Errors.Error500PageModel

@{
    ViewData["Title"] = "Internal server error";
}

@section FormBannerLeft{
    <h1 class="heading-large">Sorry, there is a problem with the service<br />(500 internal server error)</h1>
}

<div id="main-container">

    <div class="row">
        <div class="col-sm-12 col-md-9">

            <p>
                Try again later, there is currently a 500 internal server error.
            </p>
            <p>
                We have not saved your work. When the service is available you will have to start again.
            </p>
            <p>
                <a href="https://dfe.service-now.com/serviceportal?id=ssp_form&table=incident&sys_id=-1&view=ess">Log an incident</a> on MyServiceDesk.
            </p>
        </div>
    </div>

</div>
