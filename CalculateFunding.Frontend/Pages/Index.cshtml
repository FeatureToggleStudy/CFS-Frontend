@page
@using CalculateFunding.Frontend.Pages
@model CalculateFunding.Frontend.Pages.IndexModel
@{
    Layout = "~/Pages/_Layout.cshtml";
}
@section BreadCrumb{

    <div class="spacing-15">
 
    </div>
}
@section BannerLeft{
    <h1 class="heading-large">Calculate Funding</h1>
}

<div class="row homepage-section-container">
    <div class="row">
        <div class="col-xs-12 col-sm-4">
            <div class="homepage-section-title">
                <a href="/specs" class="heading-small">Manage the Specification</a>
            </div>
            <div>Create and manage the policy specifications used to distribute funding.</div>
        </div>
        <div class="col-xs-12 col-sm-4">
            <div class="homepage-section-title">
                <a href="/datasets" class="heading-small">Manage the Data</a>
            </div>
            <div>Create and manage datasets and their relationships.</div>
        </div>
        <div class="col-xs-12 col-sm-4">
            <div class="homepage-section-title">
                <a href="/tests/manage" class="heading-small">Manage the tests</a>
            </div>
            <div>Design or reuse tests for funding calculations.</div>
        </div>
    </div>
    <div class="row">
        <div class="col-xs-12 col-sm-4">
            <div class="homepage-section-title">
                <a href="/calcs" class="heading-small">Manage the Calculations</a>
            </div>
            <div>Create and manage funding calculation scripts.</div>
        </div>
        <div class="col-xs-12 col-sm-4">
            <div class="homepage-section-title">
                <a href="/results/index" class="heading-small">View the Results</a>
            </div>
            <div>Review and validate the results of the calculations and the tests for each provider.</div>
        </div>
        <div class="col-xs-12 col-sm-4">
            <div class="homepage-section-title">
                <a href="/results/publish" class="heading-small">Publish the results</a>
            </div>
            <div>Release funding for providers and say how it’s been calculated.</div>
        </div>
    </div>
</div>



