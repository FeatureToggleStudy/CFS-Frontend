@page
@using ApiClient
@inject AllocationsApiClient ApiClient;
@{
    ViewData["Title"] = "Home page";
}


@functions
{
    public object Budgets { get; set; }
    public async Task OnGetAsync()
    {
        Budgets = await ApiClient.GetAsync<object>("api/v1/results/budgets/");
    }
}

